{% extends 'base.html.twig' %}

{% block body %}

    <a href="{{ path('app_product_add') }}" class="btn btn-success">
        Add new product
    </a>

    <table class="table">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th></th>

        </tr>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>
                    <a href="{{ path('app_product_edit', {id: product.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                    <form action="{{ path('app_product_delete', {id: product.id}) }}" method="post" style="display: inline">
                        <input type="hidden" name="token" value="{{ csrf_token('delete-product') }}">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}