{% extends 'base.html.twig' %}

{% block body %}

    {% set error = authenticationUtils.lastAuthenticationError %}

    {% if error %}
        <div class="alert alert-danger">
            {{ error.message }}
        </div>
    {% endif %}

    <form action="{{ path('app_default_login') }}" method="post">
        <div class="form-group">
            <label>
                Login
                <input class="form-control" type="text" name="_username" value="{{ authenticationUtils.lastUsername }}">
            </label>
        </div>

        <div class="form-group">
            <label>
                Password
                <input class="form-control" type="password" name="_password">
            </label>
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
    </form>

{% endblock %}